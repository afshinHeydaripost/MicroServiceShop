@page
@model Site.Pages.LoginModel
@{
}
<!-- Start Page Title Area -->
<div class="page-title-area bg-7">
    <div class="container">
        <div class="page-title-content">
            <h2>حساب من</h2>
            <ul>
                <li>
                    <a asp-page="Index">
                        خانه
                    </a>
                </li>

                <li class="active">ورود</li>
            </ul>
        </div>
    </div>
</div>
<!-- End Page Title Area -->
<!-- Start Log In Area -->
<section class="user-area-style ptb-100">
    <div class="container">
        <div class="row  justify-content-center">
            <div class="col-lg-6 col-md-8 col-12">
                <div class="section-title">
                    <h2>وارد شوید</h2>
                </div>

                <div class="contact-form-action mb-50">
                    <form method="post" id="frmLogin">
                        <div class="row">
                            <div class="col-12">
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="loginRequest.Username"></label>
                                    <input class="form-control" type="text" asp-for="loginRequest.Username">
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="loginRequest.Password"></label>
                                    <input class="form-control" type="password" asp-for="loginRequest.Password">
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="login-action">
                                    <span class="log-rem">
                                        <input asp-for="loginRequest.RememberMe" type="checkbox">
                                        <label asp-for="loginRequest.RememberMe"></label>
                                    </span>
                                    <span class="forgot-login">
                                        <a href="recover-password.html">بازیابی گذرواژه؟</a>
                                    </span>
                                </div>
                            </div>

                            <div class="col-12">
                                <button class="default-btn w-100" type="button" id="btnLoginUser">
                                    @Resource.Login
                                </button>
                            </div>

                            <div class="col-12">
                                <p>حساب کاربری داری؟ <a asp-page="Register">ثبت نام!</a></p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- End Log In Area -->
@section Scripts {

    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#btnLoginUser").click(function (event) {
                AddEdit('#frmLogin', '/Login?handler=Login', function (res) {
                    if (res.isSuccess) {
                        ChangeUrl();
                    } else {
                        ToastMessageError(res.message);
                    }
                }, true)
            });
        })

    </script>
}