@model List<UserViewModel>

<!--begin::Content-->
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->
    <div class="subheader py-2 py-lg-4 subheader-solid" id="kt_subheader">
        <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-2">
                <!--begin::Page Title-->
                <h5 class="text-dark font-weight-bold mt-2 mb-2 mr-5">کاربران و نقش ها</h5>
                <!--end::Page Title-->
            </div>
            <!--end::Info-->
        </div>
    </div>
    <!--end::Subheader-->
    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container">
            <!--begin::Dashboard-->
            <!--begin::Row-->
            <div class="row">
                <div class="col-lg-12 col-xxl-3 order-1 order-xxl-2">    </div>
                <div class="col-lg-12 col-xxl-6 order-1 order-xxl-2">
                    <!--begin::List Widget 8-->
                    <div class="card card-custom card-stretch gutter-b">
                        <!--begin::Header-->
                        <div class="card-header border-0">
                            <h3 class="card-title font-weight-bolder text-dark">کاربران و نقش ها</h3>
                        </div>
                        <!--end::Header-->
                        <!--begin::Body-->
                        <div class="card-body pt-0">
                            <div class="form-group">
                                <label>
                                    کاربران
                                </label>

                                <select id="User" class="custom-select form-control w-100">
                                    <option value="0" selected>--انتخاب کنید--</option>
                                    @if (Model is not null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <option value="@item.Id">@item.FirstName - @item.LastName</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div id="RoleList">
                            </div>
                        </div>
                        <!--end::Body-->
                        <!--begin::footer-->
                        <div class="card-footer text-right">
                            <partial name="/views/shared/Partials/_btnRegister.cshtml" model="@("btnRegisterUserRoles")" />
                        </div>
                        <!--end::footer-->
                    </div>
                    <!--end: Card-->
                    <!--end::List Widget 8-->
                </div>
                <div class="col-lg-12 col-xxl-3 order-1 order-xxl-2">    </div>
            </div>
            <!--end::Row-->
            <!--end::Dashboard-->
        </div>
        <!--end::Container-->
    </div>
    <!--end::Entry-->
</div>
<!--end::Content-->
@section Scripts {
    <script src="~/js/pages/crud/forms/widgets/select2.js"></script>
    <script>
        $(document).ready(function () {
            ToSelect2('.custom-select');
            $("#User").change(function () {
                GetUserRoleList($(this).val())
            });
            $("#btnRegisterUserRoles").click(function () {
                var obj = {
                    UserId: $("#User").val(),
                    RolesIds: getCheckedValues('.roleItem:checked'),
                };
                if ((!isNullOrEmpty(obj.UserId)) && obj.RolesIds != null && obj.RolesIds.length > 0) {
                    PostToServer("/Account/RegisterUserRoles", obj, function (res) {
                        if (!res.isSuccess) {
                            ToastMessageError(res.message)
                        } else {
                            ToastMessageSuccess(res.message)
                        }
                    }, true)
                }
            });
        });
        function GetUserRoleList(userId) {
            GetFromServer("/Account/GetUserRoles", { userId: userId }, function (res) {
                $("#RoleList").html(res);
            }, true)
        }
    </script>
}
