@model LoginRequestViewModel

@{
    Layout = "/views/shared/_LoginLayout.cshtml";
}
<!--begin::Main-->
<div class="d-flex flex-column flex-root">
    <!--begin::Login-->
    <div class="login login-5 login-signin-on d-flex flex-row-fluid" id="kt_login">
        <div class="d-flex flex-center bgi-size-cover bgi-no-repeat flex-row-fluid" style="background-image: url(/media/bg/bg-2.jpg);">
            <div class="login-form text-center text-white p-7 position-relative overflow-hidden">
                <!--begin::Login Header-->
                <div class="d-flex flex-center mb-15">
                    <a href="#">
                        <img src="~/media/logos/logo-letter-13.png" class="max-h-75px" alt="" />
                    </a>
                </div>
                <!--end::Login Header-->
                <!--begin::Login Sign in form-->
                <div class="login-signin">
                    <div class="mb-20">
                        <h3 class="opacity-40 font-weight-normal">ورود به پنل </h3>
                    </div>
                    <form class="form" asp-controller="Account" asp-action="Login1" method="post">
                        <div class="form-group">
                            <input asp-for="Username" class="form-control h-auto text-white bg-white-o-5 rounded-pill border-0 py-4 px-8" type="text" placeholder="تام کاربری" autocomplete="off" />
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control h-auto text-white bg-white-o-5 rounded-pill border-0 py-4 px-8" type="password" placeholder="کلمه عبور" />
                        </div>
                        <div class="form-group d-flex flex-wrap justify-content-between align-items-center px-8 opacity-60">
                            <div class="checkbox-inline">
                                <label class="checkbox checkbox-outline checkbox-white text-white m-0">
                                    <input type="checkbox" name="remember" />
                                    <span></span>مرا بخواطر بسپار
                                </label>
                            </div>
                            <a href="javascript:;" id="kt_login_forgot" class="text-white font-weight-bold">فراموش رمز عبور</a>
                        </div>
                        <div class="form-group text-center mt-10">
                            <button type="button" id="btnLogin" class="btn btn-pill btn-primary opacity-90 px-15 py-3">ورود</button>
                        </div>
                    </form>
                </div>
                <!--end::Login Sign in form-->
                <!--begin::Login forgot password form-->
                <div class="login-forgot">
                    <div class="mb-20">
                        <h3 class="opacity-40 font-weight-normal">فراموش رمز عبور</h3>
                    </div>
                    <form class="form" id="kt_login_forgot_form">
                        <div class="form-group mb-10">
                            <input class="form-control h-auto text-white bg-white-o-5 rounded-pill border-0 py-4 px-8" type="text" placeholder="نام کاربری" name="email" autocomplete="off" />
                        </div>
                        <div class="form-group">
                            <button id="kt_login_forgot_submit" class="btn btn-pill btn-primary opacity-90 px-15 py-3 m-2">ثبت</button>
                            <button id="kt_login_forgot_cancel" class="btn btn-pill btn-outline-white opacity-70 px-15 py-3 m-2">انصراف</button>
                        </div>
                    </form>
                </div>
                <!--end::Login forgot password form-->
            </div>
        </div>
    </div>
    <!--end::Login-->
</div>
<!--end::Main-->
@section Scripts {
    <script>
        $(document).ready(function () {
            $("#btnLogin").click(function () {
                let obj = {
                    Username: $("#Username").val(),
                    Password: $("#Password").val()
                };
                PostToServerByAntiForgeryToken("/Account/LoginUser", obj, $('input[name="__RequestVerificationToken"]').val(), function (res) {
                    if (!res.isSuccess) {
                        ToastMessageError(res.message);
                    }
                })
            })
        })
    </script>
}