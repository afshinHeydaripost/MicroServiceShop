	@model ProductModel
<!--begin::Content-->
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->
    <div class="subheader py-2 py-lg-4 subheader-solid" id="kt_subheader">
        <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-2">
                <!--begin::Page Title-->
                <h5 class="text-dark font-weight-bold mt-2 mb-2 mr-5">محصولات</h5>
                <!--end::Page Title-->
            </div>
            <!--end::Info-->
            <!--begin::Toolbar-->
            <div class="d-flex align-items-center">
                <!--begin::Actions-->
                <partial name="/views/shared/Partials/_btnAdd.cshtml" />
                <!--end::Actions-->

            </div>
            <!--end::Toolbar-->
        </div>
    </div>
    <!--end::Subheader-->
    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container">
            <!--begin::Dashboard-->
            <!--begin::Row-->
            <div class="row">
                <div class="col-lg-12 col-xxl-4 order-1 order-xxl-2">
                    <!--begin::List Widget 8-->
                    <div class="card card-custom card-stretch gutter-b">
                        <!--begin::Header-->
                        <div class="card-header border-0">
                            <h3 class="card-title font-weight-bolder text-dark">محسولات</h3>

                        </div>
                        <!--end::Header-->
                        <!--begin::Body-->
                        <div class="card-body pt-0">
                            <table id="tblProducts" class="table gy-5 datatable-custom">
                                <thead>
                                    <tr>
                                        <th>کد</th>
                                        <th>عنوان </th>
                                        <th> عدم نمایش</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model is not null && Model.ProductsList is not null)
                                    {
                                        foreach (var item in Model.ProductsList)
                                        {
                                            <tr>
                                                <td>@item.Code</td>
                                                <td>@item.Title</td>
                                                @if (item.IsHidden == true)
                                                {
                                                    <td>
                                                        <input type="checkbox" disabled checked />
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td>
                                                        <input type="checkbox" disabled />
                                                    </td>
                                                }
                                                <td>
                                                    <i class="flaticon-delete mx-1 cursor-pointer" title="حذف"></i>
                                                    <i class="flaticon-edit mx-1 cursor-pointer" title="ویرایش"></i>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!--end::Body-->
                    </div>
                    <!--end: Card-->
                    <!--end::List Widget 8-->
                </div>
            </div>
            <!--end::Row-->
            <!--end::Dashboard-->
        </div>
        <!--end::Container-->
    </div>
    <!--end::Entry-->
    <!-- Modal-->
    <div class="modal fade" id="ProductModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdrop" aria-hidden="true">

        <div class="modal-dialog  modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ProductModalLabel"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i aria-hidden="true" class="ki ki-close"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="form">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6">

                                    <div class="form-group">
                                        <label>گروه کالا</label>
                                        <div></div>
                                        <select asp-for="Product.CategoryId" class="custom-select form-control">
                                            <option selected>--انتخاب کنید--</option>
                                            @if (Model.ProductCategoryList is not null)
                                            {
                                                foreach (var item in Model.ProductCategoryList)
                                                {
                                                    <option value="@item.ProductCategoryId">@item.Title</option>
                                                }                                  
                                            }
                                        </select>
                                    </div>
                            </div> 
                            <div class="col-md-6">

                                    <div class="form-group">
                                        <label>برند کالا</label>
                                        <div></div>
                                        <select asp-for="Product.BrandId" class="custom-select form-control">
                                            <option selected>--انتخاب کنید--</option>
                                            @if (Model.BrandsList is not null)
                                            {
                                                foreach (var item in Model.BrandsList)
                                                {
                                                    <option value="@item.BrandId">@item.Title</option>
                                                }                                  
                                            }
                                        </select>
                                    </div>
                            </div> 
                        </div>
                    </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <partial name="/views/shared/Partials/_btnCloseModal.cshtml" />
                    <partial name="/views/shared/Partials/_btnRegister.cshtml" />
                </div>
            </div>
        </div>
    </div>
</div>
<!--end::Content-->
@section Scripts {
    <script>
        $(document).ready(function () {
            ToDataTable("#tblProducts");
            $("#btnAdd").click(function () {
                ShowModal("#ProductModal");
                $("#ProductModalLabel").text("افزودن محصول جدید");

            })
        });
    </script>
}